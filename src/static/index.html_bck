    <script>
        const API_BASE_URL = '/api';
        let currentRules = [];
        let selectedIP = null;
        let currentUser = null;
        let allHosts = [];

        // Inicializa√ß√£o da aplica√ß√£o
        document.addEventListener('DOMContentLoaded', function() {
            checkAuthentication();
            setupEventListeners();
        });

        function setupEventListeners() {
            // Formul√°rio de login
            document.getElementById('login-form').addEventListener('submit', handleLogin);
            
            // Formul√°rio de cadastro DHCP
            document.getElementById('ip-form').addEventListener('submit', handleFormSubmit);
            
            // Sele√ß√£o de regra
            document.getElementById('rule-select').addEventListener('change', handleRuleChange);
            
            // Formata√ß√£o autom√°tica do MAC
            document.getElementById('mac-address').addEventListener('input', formatMacAddress);

            // Abas de navega√ß√£o
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.addEventListener('click', handleTabClick);
            });

            // Busca de hosts
            document.getElementById('search-hosts').addEventListener('input', handleSearchHosts);

            // Bot√£o de atualizar status
            document.getElementById('refresh-hosts-btn').addEventListener('click', loadHostsWithStatus);
        }

        function handleTabClick(event) {
            const tabName = event.target.dataset.tab;
            
            // Remover classe ativa de todas as abas
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            
            // Adicionar classe ativa √† aba clicada
            event.target.classList.add('active');
            document.getElementById(`tab-${tabName}`).classList.add('active');

            // Se for a aba de hosts, carregar os dados
            if (tabName === 'hosts') {
                loadHostsWithStatus();
            }
        }

        async function checkAuthentication() {
            try {
                const response = await fetch(`${API_BASE_URL}/auth/check`);
                const data = await response.json();
                
                if (data.authenticated) {
                    currentUser = data.user;
                    showMainContent();
                    loadInitialData();
                } else {
                    showLoginForm();
                }
            } catch (error) {
                console.error('Erro ao verificar autentica√ß√£o:', error);
                showLoginForm();
            }
        }

        function showMainContent() {
            document.getElementById('login-container').style.display = 'none';
            document.getElementById('main-content').classList.add('show');
            document.getElementById('user-info').classList.add('show');
            document.getElementById('user-name').textContent = currentUser.username;
        }

        function showLoginForm() {
            document.getElementById('login-container').style.display = 'flex';
            document.getElementById('main-content').classList.remove('show');
            document.getElementById('user-info').classList.remove('show');
        }



        async function handleLogin(event) {
            event.preventDefault();
            
            const formData = new FormData(event.target);
            const data = {
                username: formData.get('username'),
                password: formData.get('password'),
                remember: formData.get('remember') === 'on'
            };

            try {
                showLoading('login-loading', true);
                
                const response = await fetch(`${API_BASE_URL}/auth/login`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (response.ok) {
                    currentUser = result.user;
                    showAlert('login-alert', 'Login realizado com sucesso!', 'success');
                    setTimeout(() => {
                        showMainContent();
                        loadInitialData();
                    }, 1000);
                } else {
                    showAlert('login-alert', result.message || 'Erro ao fazer login', 'error');
                }
                
                showLoading('login-loading', false);
            } catch (error) {
                showAlert('login-alert', 'Erro de conex√£o: ' + error.message, 'error');
                showLoading('login-loading', false);
            }
        }



        async function logout() {
            try {
                const response = await fetch(`${API_BASE_URL}/auth/logout`, {
                    method: 'POST'
                });
                
                if (response.ok) {
                    currentUser = null;
                    showLoginForm();
                    showAlert('login-alert', 'Logout realizado com sucesso!', 'success');
                }
            } catch (error) {
                console.error('Erro ao fazer logout:', error);
            }
        }

        async function loadInitialData() {
            try {
                showLoading('loading', true);
                
                // Carregar estat√≠sticas
                const statsResponse = await fetch(`${API_BASE_URL}/dhcp/stats`);
                const stats = await statsResponse.json();
                updateStats(stats);
                
                // Carregar regras
                const rulesResponse = await fetch(`${API_BASE_URL}/dhcp/rules`);
                const rules = await rulesResponse.json();
                currentRules = rules;
                populateRulesSelect(rules);
                
                showLoading('loading', false);
            } catch (error) {
                showAlert('alert', 'Erro ao carregar dados iniciais: ' + error.message, 'error');
                showLoading('loading', false);
            }
        }

        function updateStats(stats) {
            document.getElementById('total-hosts').textContent = stats.total_hosts || 0;
            document.getElementById('total-rules').textContent = stats.total_rules || 0;
        }

        function populateRulesSelect(rules) {
            const select = document.getElementById('rule-select');
            select.innerHTML = '<option value="">Selecione uma regra...</option>';
            
            rules.forEach((rule, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = `${rule.categoria} - ${rule.acesso} (${rule.inicio} - ${rule.fim})`;
                select.appendChild(option);
            });
        }

        async function handleRuleChange(event) {
            const ruleIndex = event.target.value;
            if (!ruleIndex) {
                document.getElementById('ip-list').innerHTML = '<div class="ip-item">Selecione uma regra para ver os IPs dispon√≠veis</div>';
                return;
            }

            try {
                const rule = currentRules[ruleIndex];
                const response = await fetch(`${API_BASE_URL}/dhcp/available-ips?start=${rule.inicio}&end=${rule.fim}`);
                const availableIPs = await response.json();
                
                displayAvailableIPs(availableIPs);
            } catch (error) {
                showAlert('alert', 'Erro ao carregar IPs dispon√≠veis: ' + error.message, 'error');
            }
        }

        function displayAvailableIPs(ips) {
            const ipList = document.getElementById('ip-list');
            
            if (ips.length === 0) {
                ipList.innerHTML = '<div class="ip-item">Nenhum IP dispon√≠vel neste range</div>';
                return;
            }

            ipList.innerHTML = '';
            ips.forEach(ip => {
                const ipItem = document.createElement('div');
                ipItem.className = 'ip-item';
                ipItem.textContent = ip;
                ipItem.addEventListener('click', () => selectIP(ip, ipItem));
                ipList.appendChild(ipItem);
            });
        }

        function selectIP(ip, element) {
            // Remove sele√ß√£o anterior
            document.querySelectorAll('.ip-item.selected').forEach(item => {
                item.classList.remove('selected');
            });
            
            // Adiciona nova sele√ß√£o
            element.classList.add('selected');
            selectedIP = ip;
            
            // Preenche o campo de IP
            document.getElementById('ip-address').value = ip;
        }

        async function handleFormSubmit(event) {
            event.preventDefault();
            
            const formData = new FormData(event.target);
            const data = {
                host_name: formData.get('host_name'),
                mac_address: formData.get('mac_address'),
                ip_address: formData.get('ip_address')
            };

            try {
                showLoading('loading', true);
                
                const response = await fetch(`${API_BASE_URL}/dhcp/register`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();
                
                if (response.ok) {
                    showAlert('alert', 'IP cadastrado com sucesso!', 'success');
                    event.target.reset();
                    selectedIP = null;
                    
                    // Atualizar estat√≠sticas
                    loadInitialData();
                    
                    // Atualizar lista de IPs dispon√≠veis se uma regra estiver selecionada
                    const ruleSelect = document.getElementById('rule-select');
                    if (ruleSelect.value) {
                        handleRuleChange({ target: ruleSelect });
                    }
                } else {
                    showAlert('alert', result.message || 'Erro ao cadastrar IP', 'error');
                }
                
                showLoading('loading', false);
            } catch (error) {
                showAlert('alert', 'Erro de conex√£o: ' + error.message, 'error');
                showLoading('loading', false);
            }
        }

        async function loadHostsWithStatus() {
            try {
                showLoading('hosts-loading', true);
                
                const response = await fetch(`${API_BASE_URL}/dhcp/hosts_status`);
                const hosts = await response.json();
                
                allHosts = hosts;
                displayHosts(hosts);
                
                showLoading('hosts-loading', false);
            } catch (error) {
                showAlert('hosts-alert', 'Erro ao carregar hosts: ' + error.message, 'error');
                showLoading('hosts-loading', false);
            }
        }

        function displayHosts(hosts) {
            
            // Adicionar a fun√ß√£o de exclus√£o de host no JavaScript
            window.deleteHost = async function(hostName) {
                if (!confirm(`Tem certeza que deseja apagar o host ${hostName}?`)) {
                    return;
                }
                
                try {
                    const response = await fetch(`${API_BASE_URL}/dhcp/hosts/${hostName}`, {
                        method: 'DELETE'
                    });

                    const result = await response.json();
                    
                    if (response.ok) {
                        showAlert('hosts-alert', result.message || 'Host exclu√≠do com sucesso!', 'success');
                        loadHostsWithStatus(); // Recarrega a lista
                    } else {
                        showAlert('hosts-alert', result.message || 'Erro ao apagar host', 'error');
                    }
                } catch (error) {
                    showAlert('hosts-alert', 'Erro de conex√£o ao apagar host: ' + error.message, 'error');
                }
            };

            const tbody = document.getElementById('hosts-tbody');
            
            if (hosts.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="5" class="no-hosts-message">
                            <p>Nenhum host cadastrado ainda</p>
                            <small>Clique em "Cadastro de IP" para adicionar um novo host</small>
                        </td>
                    </tr>
                `;
                return;
            }

            tbody.innerHTML = '';
            hosts.forEach(host => {
                const row = document.createElement('tr');
                
                // Determinar classe do status
                let statusClass = 'status-loading';
                let statusText = host.connectivity_status || 'Verificando...';
                
                if (statusText === 'Online') {
                    statusClass = 'status-online';
                } else if (statusText.includes('Offline')) {
                    statusClass = 'status-offline';
                } else if (statusText === 'Erro') {
                    statusClass = 'status-error';
                }

                row.innerHTML = `
                    <td><strong>${host.name}</strong></td>
                    <td><code>${host.ip_address}</code></td>
                    <td><code>${host.mac_address}</code></td>
                    <td>${host.rule}</td>
                    <td>
                        <button class="btn-edit" onclick="openEditModal('${host.name}', '${host.mac_address}', '${host.ip_address}')">Editar</button>
                        <button class="btn-secondary" onclick="deleteHost('${host.name}')" style="background-color: #dc3545; color: white; padding: 5px 10px; border: none; border-radius: 5px; cursor: pointer;">Apagar</button>
                    </td>
                    <td><span class="status-badge ${statusClass}">${statusText}</span></td>
                `;
                
                tbody.appendChild(row);
            });
        }

        function handleSearchHosts(event) {
            const searchTerm = event.target.value.toLowerCase();
            
            if (!searchTerm) {
                displayHosts(allHosts);
                return;
            }

            const filteredHosts = allHosts.filter(host => {
                return (
                    host.name.toLowerCase().includes(searchTerm) ||
                    host.ip_address.toLowerCase().includes(searchTerm) ||
                    host.mac_address.toLowerCase().includes(searchTerm)
                );
            });

            displayHosts(filteredHosts);
        }

        function formatMacAddress(event) {
            let value = event.target.value.replace(/[^0-9A-Fa-f]/g, '');
            value = value.match(/.{1,2}/g)?.join(':') || value;
            if (value.length > 17) value = value.substring(0, 17);
            event.target.value = value.toUpperCase();
        }

        function showAlert(elementId, message, type) {
            const alert = document.getElementById(elementId);
            alert.textContent = message;
            alert.className = `alert ${type}`;
            alert.style.display = 'block';
            
            setTimeout(() => {
                alert.style.display = 'none';
            }, 5000);
        }

        function hideAlert(elementId) {
            const alert = document.getElementById(elementId);
            alert.style.display = 'none';
        }

        function showLoading(elementId, show) {
            document.getElementById(elementId).style.display = show ? 'block' : 'none';
        }

        // Fun√ß√µes do Modal de Edi√ß√£o
        let editSelectedIP = null;

        function openEditModal(hostName, macAddress, ipAddress) {
            // Preencher os campos do formul√°rio
            document.getElementById('edit-host-name-original').value = hostName;
            document.getElementById('edit-host-name').value = hostName;
            document.getElementById('edit-mac-address').value = macAddress;
            document.getElementById('edit-ip-address').value = ipAddress;
            
            // Resetar sele√ß√£o de IP
            editSelectedIP = null;
            
            // Carregar regras no select do modal
            populateEditRulesSelect(currentRules);
            
            // Configurar evento de mudan√ßa de regra
            document.getElementById('edit-rule-select').onchange = handleEditRuleChange;
            
            // Configurar formata√ß√£o autom√°tica do MAC
            document.getElementById('edit-mac-address').oninput = formatMacAddress;
            
            // Mostrar o modal
            document.getElementById('edit-modal').classList.add('show');
            
            // Limpar alertas
            hideAlert('edit-alert');
        }

        function closeEditModal() {
            document.getElementById('edit-modal').classList.remove('show');
            document.getElementById('edit-form').reset();
            editSelectedIP = null;
            hideAlert('edit-alert');
        }

        function populateEditRulesSelect(rules) {
            const select = document.getElementById('edit-rule-select');
            select.innerHTML = '<option value="">Selecione uma regra...</option>';
            
            rules.forEach((rule, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = `${rule.categoria} - ${rule.acesso} (${rule.inicio} - ${rule.fim})`;
                select.appendChild(option);
            });
        }

        async function handleEditRuleChange(event) {
            const ruleIndex = event.target.value;
            if (!ruleIndex) {
                document.getElementById('edit-ip-list').innerHTML = '<div class="ip-item">Selecione uma regra para ver os IPs dispon√≠veis</div>';
                return;
            }

            try {
                const rule = currentRules[ruleIndex];
                const response = await fetch(`${API_BASE_URL}/dhcp/available-ips?start=${rule.inicio}&end=${rule.fim}`);
                const availableIPs = await response.json();
                
                displayEditAvailableIPs(availableIPs);
            } catch (error) {
                showAlert('edit-alert', 'Erro ao carregar IPs dispon√≠veis: ' + error.message, 'error');
            }
        }

        function displayEditAvailableIPs(ips) {
            const ipList = document.getElementById('edit-ip-list');
            
            if (ips.length === 0) {
                ipList.innerHTML = '<div class="ip-item">Nenhum IP dispon√≠vel neste range</div>';
                return;
            }

            ipList.innerHTML = '';
            ips.forEach(ip => {
                const ipItem = document.createElement('div');
                ipItem.className = 'ip-item';
                ipItem.textContent = ip;
                ipItem.addEventListener('click', () => selectEditIP(ip, ipItem));
                ipList.appendChild(ipItem);
            });
        }

        function selectEditIP(ip, element) {
            // Remove sele√ß√£o anterior
            document.querySelectorAll('#edit-ip-list .ip-item.selected').forEach(item => {
                item.classList.remove('selected');
            });
            
            // Adiciona nova sele√ß√£o
            element.classList.add('selected');
            editSelectedIP = ip;
            
            // Preenche o campo de IP
            document.getElementById('edit-ip-address').value = ip;
        }

        async function saveEditHost() {
            const hostName = document.getElementById('edit-host-name-original').value;
            const macAddress = document.getElementById('edit-mac-address').value.trim().toUpperCase();
            const ipAddress = document.getElementById('edit-ip-address').value.trim();
            
            // Valida√ß√µes b√°sicas
            if (!macAddress || !ipAddress) {
                showAlert('edit-alert', 'Todos os campos s√£o obrigat√≥rios', 'error');
                return;
            }
            
            try {
                showLoading('edit-loading', true);
                hideAlert('edit-alert');
                
                const response = await fetch(`${API_BASE_URL}/dhcp/hosts/${hostName}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        mac_address: macAddress,
                        ip_address: ipAddress
                    })
                });

                const result = await response.json();
                
                if (response.ok) {
                    showAlert('edit-alert', 'Host atualizado com sucesso!', 'success');
                    
                    // Aguardar um pouco para mostrar a mensagem de sucesso
                    setTimeout(() => {
                        closeEditModal();
                        loadHostsWithStatus(); // Recarregar a lista de hosts
                        loadInitialData(); // Atualizar estat√≠sticas
                    }, 1500);
                } else {
                    showAlert('edit-alert', result.message || 'Erro ao atualizar host', 'error');
                }
                
                showLoading('edit-loading', false);
            } catch (error) {
                showAlert('edit-alert', 'Erro de conex√£o: ' + error.message, 'error');
                showLoading('edit-loading', false);
            }
        }

        // Fechar modal ao clicar fora dele
        window.onclick = function(event) {
            const modal = document.getElementById('edit-modal');
            if (event.target === modal) {
                closeEditModal();
            }
        };

        // ===== FUN√á√ïES DE AUDITORIA =====
        let currentAuditPage = 0;
        const auditLogsPerPage = 50;
        let currentAuditFilters = {};
        let totalAuditLogs = 0;

        async function loadAuditStats() {
            try {
                const response = await fetch('/api/audit/logs/stats');
                const data = await response.json();
                
                if (data.success) {
                    const stats = data.stats;
                    document.getElementById('total-logs').textContent = stats.total_logs || 0;
                    document.getElementById('logs-24h').textContent = stats.logs_24h || 0;
                    document.getElementById('logs-success').textContent = stats.by_status.SUCCESS || 0;
                    document.getElementById('logs-errors').textContent = (stats.by_status.ERROR || 0) + (stats.by_status.FAILURE || 0);
                }
            } catch (error) {
                console.error('Erro ao carregar estat√≠sticas de auditoria:', error);
            }
        }

        async function loadAuditLogs(page = 0) {
            try {
                currentAuditPage = page;
                const offset = page * auditLogsPerPage;
                
                // Construir query string com filtros
                const params = new URLSearchParams({
                    limit: auditLogsPerPage,
                    offset: offset,
                    ...currentAuditFilters
                });
                
                const response = await fetch(`/api/audit/logs?${params}`);
                const data = await response.json();
                
                if (data.success) {
                    totalAuditLogs = data.total;
                    displayAuditLogs(data.logs);
                    updatePagination();
                } else {
                    showAuditAlert(data.message || 'Erro ao carregar logs', 'error');
                }
            } catch (error) {
                console.error('Erro ao carregar logs:', error);
                showAuditAlert('Erro ao carregar logs de auditoria', 'error');
            }
        }

        function displayAuditLogs(logs) {
            const tbody = document.getElementById('audit-logs-table');
            
            if (!logs || logs.length === 0) {
                tbody.innerHTML = `
                    <tr>
                        <td colspan="7" class="no-hosts-message">
                            <p>Nenhum log encontrado</p>
                            <small>Tente ajustar os filtros ou realizar algumas opera√ß√µes no sistema</small>
                        </td>
                    </tr>
                `;
                return;
            }
            
            tbody.innerHTML = logs.map(log => {
                const timestamp = new Date(log.timestamp).toLocaleString('pt-BR');
                const actionClass = log.action.toLowerCase();
                const statusClass = log.status.toLowerCase();
                
                let detailsHtml = '-';
                if (log.details) {
                    detailsHtml = `<button class="log-details-btn" onclick='showLogDetails(${JSON.stringify(log.details).replace(/'/g, "&apos;")})'>Ver</button>`;
                }
                
                return `
                    <tr>
                        <td class="log-timestamp">${timestamp}</td>
                        <td>${log.username}</td>
                        <td><span class="log-action ${actionClass}">${log.action}</span></td>
                        <td>${log.resource_type}</td>
                        <td>${log.resource_name || '-'}</td>
                        <td><span class="log-status ${statusClass}">${log.status}</span></td>
                        <td>${detailsHtml}</td>
                    </tr>
                `;
            }).join('');
        }

        function showLogDetails(details) {
            try {
                const detailsObj = typeof details === 'string' ? JSON.parse(details) : details;
                const formatted = JSON.stringify(detailsObj, null, 2);
                alert('Detalhes do Log:\n\n' + formatted);
            } catch (error) {
                alert('Detalhes: ' + details);
            }
        }

        function updatePagination() {
            const totalPages = Math.ceil(totalAuditLogs / auditLogsPerPage);
            const currentPageNum = currentAuditPage + 1;
            
            document.getElementById('page-info').textContent = `P√°gina ${currentPageNum} de ${totalPages || 1}`;
            document.getElementById('prev-page-btn').disabled = currentAuditPage === 0;
            document.getElementById('next-page-btn').disabled = currentAuditPage >= totalPages - 1 || totalPages === 0;
        }

        function previousAuditPage() {
            if (currentAuditPage > 0) {
                loadAuditLogs(currentAuditPage - 1);
            }
        }

        function nextAuditPage() {
            const totalPages = Math.ceil(totalAuditLogs / auditLogsPerPage);
            if (currentAuditPage < totalPages - 1) {
                loadAuditLogs(currentAuditPage + 1);
            }
        }

        function applyAuditFilters() {
            currentAuditFilters = {};
            
            const action = document.getElementById('filter-action').value;
            const resource = document.getElementById('filter-resource').value;
            const status = document.getElementById('filter-status').value;
            const username = document.getElementById('filter-username').value;
            const startDate = document.getElementById('filter-start-date').value;
            const endDate = document.getElementById('filter-end-date').value;
            
            if (action) currentAuditFilters.action = action;
            if (resource) currentAuditFilters.resource_type = resource;
            if (status) currentAuditFilters.status = status;
            if (username) currentAuditFilters.username = username;
            if (startDate) currentAuditFilters.start_date = startDate;
            if (endDate) currentAuditFilters.end_date = endDate;
            
            loadAuditLogs(0);
        }

        function clearAuditFilters() {
            document.getElementById('filter-action').value = '';
            document.getElementById('filter-resource').value = '';
            document.getElementById('filter-status').value = '';
            document.getElementById('filter-username').value = '';
            document.getElementById('filter-start-date').value = '';
            document.getElementById('filter-end-date').value = '';
            
            currentAuditFilters = {};
            loadAuditLogs(0);
        }

        function showAuditAlert(message, type = 'success') {
            const alertDiv = document.getElementById('audit-alert');
            alertDiv.textContent = message;
            alertDiv.className = `alert ${type}`;
            alertDiv.style.display = 'block';
            
            setTimeout(() => {
                alertDiv.style.display = 'none';
            }, 5000);
        }

        // Modificar a fun√ß√£o de troca de abas para carregar logs quando a aba de auditoria for aberta
        const originalTabButtons = document.querySelectorAll('.nav-tab');
        originalTabButtons.forEach(button => {
            button.addEventListener('click', function() {
                const tab = this.getAttribute('data-tab');
                if (tab === 'audit') {
                    loadAuditStats();
                    loadAuditLogs(0);
                }
            });
        });
    </script>
</body>
</html>



        // ===== FUN√á√ïES DE CONTROLE DO SERVI√áO DHCP =====

        async function checkDhcpStatus() {
            const statusDisplay = document.getElementById('dhcp-status-display');
            const statusText = document.getElementById('dhcp-status-text');
            const alert = document.getElementById('service-alert');
            
            statusText.textContent = 'Verificando...';
            statusDisplay.className = 'stat-item'; // Resetar classe
            alert.style.display = 'none';

            try {
                const response = await fetch(`${API_BASE_URL}/dhcp/status`);
                const data = await response.json();
                
                let status = data.status || 'unknown';
                let message = data.message || 'Status desconhecido.';
                let statusClass = '';
                
                switch(status) {
                    case 'active':
                        statusClass = 'active-status';
                        break;
                    case 'inactive':
                    case 'failed':
                        statusClass = 'inactive-status';
                        break;
                    default:
                        statusClass = 'unknown-status';
                }

                statusText.textContent = message;
                statusDisplay.className = `stat-item ${statusClass}`;
                
                if (status === 'failed') {
                    showAlert('service-alert', `Falha no servi√ßo: ${data.full_output.substring(0, 100)}...`, 'error');
                }

            } catch (error) {
                statusText.textContent = 'Erro de Conex√£o';
                statusDisplay.className = 'stat-item inactive-status';
                showAlert('service-alert', 'Erro ao conectar com o servi√ßo DHCP: ' + error.message, 'error');
            }
        }

        async function restartDhcpService() {
            const statusText = document.getElementById('dhcp-status-text');
            const alert = document.getElementById('service-alert');
            
            statusText.textContent = 'Reiniciando...';
            alert.style.display = 'none';
            
            if (!confirm('Tem certeza que deseja reiniciar o servi√ßo DHCP? Isso pode interromper temporariamente a aloca√ß√£o de IPs.')) {
                checkDhcpStatus(); // Recarrega o status se o usu√°rio cancelar
                return;
            }

            try {
                const response = await fetch(`${API_BASE_URL}/dhcp/restart`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                const data = await response.json();

                if (data.success) {
                    showAlert('service-alert', data.message, 'success');
                } else {
                    showAlert('service-alert', data.message || 'Erro ao reiniciar o servi√ßo.', 'error');
                    console.error('Erro de Rein√≠cio:', data.full_output);
                }
                
                // Aguarda um pouco e verifica o status novamente
                setTimeout(checkDhcpStatus, 2000); 

            } catch (error) {
                showAlert('service-alert', 'Erro de Conex√£o ao tentar reiniciar o servi√ßo: ' + error.message, 'error');
                checkDhcpStatus(); // Recarrega o status em caso de erro de conex√£o
            }
        }

        // Fun√ß√µes de inicializa√ß√£o
        document.addEventListener('DOMContentLoaded', () => {
            if (isLoggedIn()) {
                checkDhcpStatus(); // Carregar o status do DHCP na inicializa√ß√£o
            }
        });
